{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "scripthost"],
    "types": ["reflect-metadata"],
    "outDir": "dist"
  },
  "include": ["src"]
}
