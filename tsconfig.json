{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "lib": ["es5", "es2015", "dom"],
    "types": ["mocha", "reflect-metadata"]
  },
  "exclude": ["node_modules"]
}
